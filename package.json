{
  "name": "@scienceartmagic/ups",
  "version": "0.0.2",
  "description": "UPS (Universal Persistent Storage): Wrapper around persistence libraries for use in Expo Go, bare/standalone Expo/React Native apps, and web/Electron",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "react-native": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "author": "Science/Art/Magic",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --skipLibCheck --noEmit",
    "build": "bob build",
    "lint": "eslint --ext .ts,.js,.tsx ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ScienceArtMagic/UPS.git"
  },
  "keywords": [
    "react",
    "native",
    "react router",
    "universal",
    "web",
    "electron"
  ],
  "peerDependencies": {
    "react": ">=18.1.0",
    "react-dom": ">=18.1.0",
    "react-native": ">=0.70.5",
    "react-native-web": ">=0.18.7"
  },
  "devDependencies": {
    "@react-native-async-storage/async-storage": "^1.17.11",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/react": "^17.0.5",
    "@types/react-native": "^0.64.5",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-preset-expo": "^9.2.2",
    "eslint": "^7.3.1",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "expo-constants": "^14.0.2",
    "expo-module-scripts": "^3.0.4",
    "expo-random": "^13.0.0",
    "expo-secure-store": "^12.0.0",
    "husky": "^4.2.0",
    "localforage": "^1.10.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^2.0.1",
    "react": ">=18.1.0",
    "react-dom": ">=18.1.0",
    "react-native": ">=0.70.5",
    "react-native-builder-bob": "^0.18.1",
    "react-native-mmkv": "^2.6.1",
    "react-native-web": ">=0.18.7",
    "typescript": "^4.2.4"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "configFile": "./babel.config.js"
        }
      ],
      "module",
      "typescript"
    ]
  }
}
